<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="10dp" >

        <ImageView
            android:id="@+id/iv_pic"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/picker_default_bg_circle" />

        <LinearLayout
            android:id="@+id/ll_name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/iv_pic"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:singleLine="true"
                android:text="鲜芋仙"
                android:textColor="#333333"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_intro_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="18:00"
                android:textColor="#6fa4db"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_name_layout"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@id/iv_pic"
            android:ellipsize="end"
            android:gravity="center_vertical|bottom"
            android:maxLines="1"
            android:text="坚持纯手工,采用上等天然食材制作出香Q的芋圆甜品、鲜嫩的仙草与滑嫩的传统的传统豆花"
            android:textColor="#666666"
            android:textSize="12sp" />

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/line" />

</LinearLayout>